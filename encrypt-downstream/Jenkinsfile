library 'ctc-encryption@shared-library'

pipeline {
  agent any
  triggers {
    eventTrigger jmespathQuery("jobType=='encrypted'")
  }
    stage("Decrypt message") {
      when {
        triggeredBy "EventTriggerCause"
        expression {
          checkAllowList()
        }
      }
      steps {
        decryptSecureEvent()
      }
    }
  }
}